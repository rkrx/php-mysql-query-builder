{
	"name": "rkr/php-mysql-query-builder",
	"description": "Easy to use query builder for PHP7.1+/PDO",
	"license": "MIT",
	"type": "library",
	"authors": [{
		"name": "ron",
		"email": "ron.kirschler@gmail.com"
	}],
	"require": {
		"php": ">= 7.1",
		"ext-pdo": "*",
		"ext-spl": "*",
		"ext-ctype": "*",
		"psr/log": "~1"
	},
	"require-dev": {
		"phpunit/phpunit": ">= 6.0",
		"phpstan/phpstan": "*@stable"
	},
	"autoload": {
		"psr-4": {
			"Kir\\MySQL\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kir\\MySQL\\": ["src/", "tests/"]
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 4 src",
		"phpunit": "phpunit -c tests.xml"
	},
	"config": {
		"platform": {
			"php": "7.1.10"
		}
	}
}
